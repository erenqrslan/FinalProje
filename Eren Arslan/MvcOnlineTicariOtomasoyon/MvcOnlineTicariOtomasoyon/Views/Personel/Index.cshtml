@using MvcOnlineTicariOtomasoyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Gorsel</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personelid</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>
                <a href="@k.PersonelGorsel" class="d-block photo-item" data-fancybox="gallery">
                    <img src="@k.PersonelGorsel" style="width:100px" />
                    <div class="photo-text-more">
                        <span class="icon icon-search"></span>
                    </div>
                </a>
            </td>
            <td>@k.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelSil/@k.Personelid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-outline-danger" style="background-color:lightcoral; color:white">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-info">Personel Ekle</a>

